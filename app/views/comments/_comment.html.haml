#comment
  .user-name
    = comment.user.user_name
  .comment-content
    = comment.content
    .comment_time
      = time_ago_in_words comment.created_at
  - if comment.user == current_user
    = link_to post_comment_path(post, comment), method: :delete, data: { confirm: "Are you sure?" }, remote: true, maxlength: 300 do
      %span(class="glyphicon glyphicon-remove delete-comment")